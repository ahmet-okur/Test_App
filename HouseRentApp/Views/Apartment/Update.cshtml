@model Apartment

@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (User.IsInRole("Admin"))
{
    <h2>Create New Apartment</h2>

    <form asp-action="Update">
        <div class="row">
            <div class="form-group col-6">
                <label asp-for="Name"></label><span class="text-danger">*</span>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Adress"></label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-3">
                <label asp-for="Price"></label><span class="text-danger">*</span>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="Square"></label><span class="text-danger">*</span>
                <input asp-for="Square" class="form-control" />
                <span asp-validation-for="Square" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="FirstRentalDate"></label><span class="text-danger">*</span>
                <input asp-for="FirstRentalDate" class="form-control" />
                <span asp-validation-for="FirstRentalDate" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="NumOfRooms"></label><span class="text-danger">*</span>
                <input asp-for="NumOfRooms" class="form-control" />
                <span asp-validation-for="NumOfRooms" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-3">
                <label asp-for="ImageUrl1"></label><span class="text-danger">*</span>
                <input asp-for="ImageUrl1" class="form-control" />
                <span asp-validation-for="ImageUrl1" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="ImageUrl2"></label><span class="text-danger">*</span>
                <input asp-for="ImageUrl2" class="form-control" />
                <span asp-validation-for="ImageUrl2" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="ImageUrl3"></label><span class="text-danger">*</span>
                <input asp-for="ImageUrl3" class="form-control" />
                <span asp-validation-for="ImageUrl3" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="ImageUrl4"></label><span class="text-danger">*</span>
                <input asp-for="ImageUrl4" class="form-control" />
                <span asp-validation-for="ImageUrl4" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Grid" class="btn btn-secondary">Back</a>
    </form>

}
else
{
    <p>Pranked</p>
}

