@model Apartment

<h2>Delete Post</h2>

<h3>Are you sure you want to delete this Post?</h3>
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">House Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>


        <dt class="col-sm-2">Adress</dt>
        <dd class="col-sm-10">@Model.Adress</dd>


        <dt class="col-sm-2">Number of Rooms</dt>
        <dd class="col-sm-10">@Model.NumOfRooms</dd>


        <dt class="col-sm-2">Square size</dt>
        <dd class="col-sm-10">@Model.Square</dd>


        <dt class="col-sm-2">Rental Period</dt>
        <dd class="col-sm-10">@Model.FirstRentalDate</dd>

        
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Grid" class="btn btn-secondary">Cancel</a>
    </form>
</div>